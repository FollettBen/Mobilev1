<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.phonegap.example"
        versionCode = "10" 
        version     = "1.0.0" >

    <!-- versionCode is optional and Android only -->

    <name>Pedometer Profile</name>

    <description>
        Pedometer profile used in order to keep track of steps you've taken along with saving a profile page by displaying your name and taking a photo!
    </description>

    <author href="https://build.phonegap.com" email="support@phonegap.com">
        Benjamin Follett
    </author>

	<gap:platform name="ios" />
	<gap:platform name="android" />


	<plugin name="cordova-plugin-camera" spec="~2.3.1" />
	<access origin="*"/>

</widget>

